<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema -->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <time type='FastUTC' />

  <!-- The targets to write to. -->
  <targets>

    <!-- Colored console target. -->
    <target xsi:type="ColoredConsole" name="ConsoleTarget"
            layout="${date}|${level:uppercase=true}|[${threadid}] ${logger} ${message} ${exception:format=tostring}" />

    <target name="PrometheusMetricsService" xsi:type="MethodCall" className="MightyCall.Metrics.Prometheus.PrometheusMetricsService, MightyCall.Metrics.Prometheus" methodName="LogMessagesCounter">
      <parameter layout="${level}" />
      <parameter layout="${message}" />
    </target>

  </targets>

  <!-- Rules to map from logger name to target. -->
  <rules>
    <!-- We use MC_NLOG_LEVEL instead of Microsoft's logging framework LOGGING__LOGLEVEL__DEFAULT
      because NLog.Extensions.Logging of version >=5 ignores it by default.
    -->
    <logger name="Microsoft.*" minlevel="Warn" writeTo="ConsoleTarget" final="true" />
    <logger name="Microsoft.*" minlevel="Trace" final="true" /> <!-- Black Hole -->
    <logger name="*" minlevel="${environment:MC_NLOG_LEVEL}" writeTo="ConsoleTarget" />
    <logger name="*" minlevel="Warn" writeTo="PrometheusMetricsService" />
  </rules>
</nlog>
